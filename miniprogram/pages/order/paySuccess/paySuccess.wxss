/* pages/order/paySuccess/paySuccess.wxss */
.pa-succ {
  height: 100vh;
  overflow-y: auto;
}

.pa-logo {
  position: relative;
  width: 100%;
  height: 180rpx;
  margin-top: 10rpx;
  background-color: #508AF2;
}

.pa-bg {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 130rpx;
  height: 130rpx;
}

.pa-ban {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  border-radius: 20rpx 20rpx;
  margin-top: 20rpx;
}

.pa-num {
  flex: 1;
  line-height: 50px;
  margin-left: 30px;
}

.pa-foot {
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #5089F2;
  color: #fff;
  text-align: center;
  border-radius: 40rpx 40rpx;
}