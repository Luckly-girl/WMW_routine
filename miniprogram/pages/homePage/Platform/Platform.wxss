/* pages/homePage/Platform/Platform.wxss */
.Platform {
  background-color: #ffffff;
  padding-bottom: 40rpx;
}

.pf-head {
  height: 60rpx;
  width: 690rpx;
  padding-top: 15rpx;
  margin: 0 auto;
  line-height: 60rpx;
  padding-left: 10rpx;
  font-size: 15px;
  border-bottom: 2rpx solid #BFBFBF;
  font-weight: 700;
}

.form-data {
  box-sizing: border-box;
  padding: 25rpx;
}

.from-view {
  min-height: 60rpx;
  box-sizing: border-box;
  padding: 15rpx 0rpx;
  display: flex;
  align-items: flex-start;
  border-bottom: 1rpx dashed #BFBFBF;
}

.from-view text {
  width: 250rpx;
  font-size: 15px;
  /* font-weight: 700; */
}

.from-view input {
  flex: 1;
  box-sizing: border-box;
  padding-left: 8rpx;
  font-size: 15px;
}

.from-but {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 20rpx;
}

.from-but text {
  width: 650rpx;
  height: 85rpx;
  border-radius: 43rpx;
  /* background: -webkit-linear-gradient(top,#538BF3,#3170E3,#538BF3); */
  background-color: #538BF3;
  text-align: center;
  line-height: 85rpx;
  color: #ffffff;
}

.bg_gg {
  width: 750rpx;
  height: 200rpx;
}

.pf-headII {
  border-bottom: 0;
  font-size: 16px;
  margin-bottom: 20rpx;
}

.pf-li {
  box-sizing: border-box;
  padding: 10rpx 30rpx;
  display: flex;
}

.pf-img {
  height: 160rpx;
  width: 280rpx;
  margin-right: 25rpx;
}

.pf-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.pf-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  font-size: 15px;
  font-weight: 600;
}

.pf-text text {
  width: 420rpx;
  line-height: 40rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.pf-pj {
  font-size: 11px;
  display: flex;
  flex-wrap: wrap;
}

.pf-pj text {
  margin-right: 8rpx;
  padding: 4rpx 6rpx;
  background-color: #DCEAFE;
  color: #508AF2;
}