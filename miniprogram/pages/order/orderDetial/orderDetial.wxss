/* pages/order/orderDetial/orderDetial.wxss */
.pts {
  height: 100vh;
 display: flex;
 flex-direction: column;
}

.pt-head {
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.pt-head text {
  height: 80rpx;
  box-sizing: border-box;
  font-size: 15px;
}

.text_active {
  border-bottom: 4rpx solid #508AF2;
  color: #508AF2;
}
.pt-navs{
  flex: 1;
  overflow-y: auto;
  background-color: #fff;
}

/* pages/order/orderServe/orderServe.wxss */
.home-content{
  background-color: #ffffff;
  min-height: 2rem;
  box-sizing: border-box;
  padding: 0.6rem 0.7rem;
}
.home-nodata{
  min-height: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999999;
}
.home-nodata image{
  height: 260rpx;
  width: 200rpx;
  margin-bottom: 15rpx;
}
.order-top{
  display: flex;
  position: relative;
  margin-bottom: 0.5rem;
  font-size: 13px;
}
.order-num{
  color: #343434;
}
.order-tip{
  position: absolute;
  right: 0;
  color: #ff0000;
  font-size: 13px;
}
.new-content{
  display: flex;
  flex-direction: row;
  margin-top:2rem;
}
.hh{
  width: 4.5rem;
  font-weight: 600;
  font-size: 17px;
  margin: 0 4rem 0 0.2rem;
}
.mm{
  font-weight: 500;
  font-size: 16px;
  color: #ff0000;
}
.new-view{
  display: flex;
  flex-direction: column;
  border-radius: 0.6rem;
  box-shadow: 0.1rem 0 0.3rem 0 #c3c3c3;
  box-sizing: border-box;
  padding: 0.5rem;
  margin-bottom: 0.8rem;
}
.new-top{
  width: 100%;
  display: flex;
  padding-bottom: 0.8rem;
}
.new-logo{
  width: 8rem;
  height:5.5rem;
  margin-right: 0.5rem;
  border-radius: 10rpx;
}
.new-foot{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0.8rem 0.5rem 0;
  border-top: 1px solid #cccccc;
  font-size: 13px;
}
.time-view{
  display: flex;
  align-items: center;
}
.time-ico{
  height: 1rem;
  width: 1rem;
  margin-right: 0.5rem;
}
.detial{
  display: inline-block;
  width: 3.3rem;
  height: 1.8rem;
  background: -webkit-linear-gradient(top,#538BF3,#3170E3,#538BF3);
  border-radius: 0.9rem;
  text-align: center;
  line-height: 1.8rem;
  color: #ffffff;
}
.delay{
  display: inline-block;
  width: 3.3rem;
  height: 1.8rem;
  border-radius: 0.9rem;
  text-align: center;
  line-height: 1.8rem;
  background-color:#FBB03B;
  color: #fff;
  margin-left: 0.4rem;
}