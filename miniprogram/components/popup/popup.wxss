/* components/popup/popup.wxss */
.wx-popup {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  background: rgba(0, 0, 0, .5);
}
.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;

  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 20rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
}
.wx-popup-title {
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  margin-top: 20px;
}
.wx-popup-con {
  margin: 60rpx 10rpx;
  text-align: center;
  font-size: 16px;
}
.wx-popup-btn {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}
.wx-popup-btn .buts{
  width: 40%;
  margin: 0;
  text-align: center;
}
.btn-ok{
  background-color: #5089F2;
  color: #fff;
}
.btn-no{
  background-color: #C7C7C7;
  color: #fff;
}