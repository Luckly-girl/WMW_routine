/* pages/homePage/law/law.wxss */
.lay{
  background-color: #fff;
  box-sizing: border-box;
  padding: 20rpx;
}
.lay-view{
  box-shadow: 0 0 10rpx 10rpx #F7F6F7;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  min-height: 200rpx;
  box-sizing: border-box;
  padding: 20rpx 15rpx;
}
.lay-name{
  min-height: 60rpx;
  padding: 10rpx 0;
  font-weight: 700;
  color: #000;
}
.lay-text{
  font-size: 15px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}