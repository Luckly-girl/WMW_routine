/* miniprogram/pages/My/my.wxss */
.my{
  height: 100%;
  overflow-y: hidden;
}
.my_top{
  position: relative;
  width: 100%;
  height: 300rpx;
}
.bg_my{
  width: 100%;
  height: 450rpx;
}
.ico{
  position: absolute;
  top: 40rpx;
  left: 55rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
}
.bg_name{
  position: absolute;
  top: 120rpx;
  left: 260rpx;
  color: #fff;
  font-size: 18px;
}
.banner{
  position: relative;
  top: -35rpx;
  width:auto;
  height: 200rpx;
  margin: 0 35rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 14px;
  background-color: #fff;
  border-radius: 5px 5px;
  box-shadow: 0 1px 3px 1px #e5e5e5;
}
.my_view{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.my_logo{
  width: 1.5rem;
  height: 1.5rem;
  margin-bottom: 20rpx;
}
.section{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width:auto;
  height: 600rpx;
  margin: 0 35rpx;
  font-size: 14px;
  background-color: #fff;
  border-radius: 10px 10px;
  box-shadow: 0 0 3px 3px #EBEBEB;
}
.se_list{
  flex: 1;
  width: 100%;
  border-bottom: 1px solid #EBEBEB;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.se_list:nth-child(6){
  border-bottom: none;
}
.se_img{
  width: 35rpx;
  height: 35rpx;
  margin: 0 25rpx;
  vertical-align: middle;
}
.se_contion{
  flex: 1;
}
.se_ico{
  width: 18rpx;
  height: 18rpx;
  margin: 0 30rpx;
}
